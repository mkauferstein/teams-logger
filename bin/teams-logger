#!/usr/bin/env node

'use strict'

require('pipe-args').load()
const pkg = require('../package.json')
const { rawLogger, simpleLogger } = require('../')
const parseLinks = require('../lib/parseLinks')

const ENV_PREFIX = 'TEAMS_LOGGER'

require('yargs')
    .env(ENV_PREFIX)
    .version(pkg.version)
    .option('webhook', {
        alias: 'w',
        describe: `Microsoft Teams Webhook [${ENV_PREFIX}_WEBHOOK]`,
        require: true,
        coerce: webhook => {
            if (webhook.startsWith('https://outlook.office.com')) {
                return webhook
            } else {
                throw 'Webhook does not look correct!'
            }
        }
    })
    .command(
        '* [message]',
        'Post Markdown to Microsoft Teams',
        yargs => {
            yargs
                .option('link', {
                    alias: 'l',
                    describe:
                        'Add link buttons with Markdown syntax [Title](url)',
                    type: 'array',
                    coerce: parseLinks
                })
                .positional('message', {
                    describe: 'Markdown message.',
                    require: true,
                    type: 'markdown'
                })
        },
        ({ link, message, webhook }) =>
            simpleLogger({ links: link, message, webhook })
    )
    .command(
        'raw [json]',
        'Post JSON message to Microsoft Teams',
        yargs => {
            yargs.positional('json', {
                describe: 'Valid Microsoft Teams JSON message.',
                require: true,
                type: 'json',
                coerce: msg => {
                    try {
                        return JSON.parse(msg)
                    } catch (error) {
                        throw 'Unable to parse JSON!'
                    }
                }
            })
        },
        ({ json, webhook }) => rawLogger({ body: json, webhook })
    ).argv
